;; http://www.gnu.org/s/emacs/manual/html_node/elisp/Faces-for-Font-Lock.html
;; http://www.calmar.ws/vim/256-xterm-24bit-rgb-color-chart.html
(deftheme pistol-theme
"Theme based on vim leo theme")

(custom-theme-set-face
 'pistol
       ((background-color . "#000000")
        (background-mode . dark)
        (border-color . "#ffffff")
        (cursor-color . "#ffffff")
        ;; white gray
        ;; Top Bar
        (foreground-color . "#ffffff")
        (mouse-color . "black"))
       ;; unknown
  
       (fringe ((t (:background "#ffffff"))))
       ;; leo, blue
       ;; Mini-bar 
       (mode-line ((t (:foreground "#ffffff" :background "#0000af"))))
       ;; unknown
       (region ((t (:background "#0d4519"))))
       ;; leo, blue
       (font-lock-builtin-face ((t (:foreground "#005fff"))))
       ;; leo, gray
       (font-lock-comment-face ((t (:foreground "#a8a8a8"))))
       ;; orange
       (font-lock-constant-face ((t (:foreground "#fe7200"))))
       ;;(font-lock-comment-delimiter-face ((t (:foreground "Gray"))))
       ;; YELLOW
       (font-lock-function-name-face ((t (:foreground "#edd400"))))
       ;; leo, blue
       (font-lock-keyword-face ((t (:foreground "#005fff"))))
       ;; pinkish
       ;; TODO make background gray
       (font-lock-string-face ((t (:foreground "#ad7fa8"))))
       ;; leo, green
       ;; Package name, object variable, type (int, String), Exception name
       (font-lock-type-face ((t (:foreground"#00d700"))))
       ;; leo, purple
       ;; parameter and variable name in declaration
       (font-lock-variable-name-face ((t (:foreground "#d75fff"))))
       ;; leo, green
       ;; M-X or cmd
       (minibuffer-prompt ((t (:foreground "#00d700" :bold t))))
       ;; TODO fix "strings" 
       (font-lock-warning-face ((t (:foreground "Red" :bold t))))
       )))
(provide-theme 'pistol)
